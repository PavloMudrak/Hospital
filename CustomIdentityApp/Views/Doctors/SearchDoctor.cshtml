@model CustomIdentityApp.ViewModels.SearchingDoctorVievModel
@{
    ViewBag.Title = "Doctors list";
}

<h2>Каталог игроков</h2>

<form method="get">
    <div class="form-inline">
        <label class="control-label">Proffesion: </label>
        @Html.DropDownList("Proffesion", Model.Proffesion as SelectList,
                         htmlAttributes: new { @class = "form-control" })

      
        <input type="submit" value="Filtr" class="btn btn-default" />
    </div>
</form>

<table>
    <tr>
        <th>Name</th>
        <th>Year</th>
        <th>Proffesion</th>
        <th>Id</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Doctors)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proffesion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorId)
            </td>
            @*<td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>*@
        </tr>
    }
</table>